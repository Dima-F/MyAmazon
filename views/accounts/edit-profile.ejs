<%- layout('layout') -%>
<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <% if(message.length>0) { %>
      <div class="alert alert-success alert-dismissible">
        <%- message %>
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      </div>
    <% } %>
    <form method="post">
        <h2 class="form-signin-heading">Edit Profile</h2>
        <div class="form-group">
          <label for="inputName">Name:</label>
          <input type="text" name="name" id="inputName" value='<%=user.profile.name %>' class="form-control" placeholder="User name" required>
        </div>
        <div class="form-group">
          <label for="inputAddress">Address:</label>
          <input type="text" name="address" id="inputAddress" value='<%=user.profile.address %>' class="form-control" placeholder="User address" required>
        </div>
        <button class="btn btn-lg btn-success" type="submit">Save</button>
      </form>
  </div>
</div>
