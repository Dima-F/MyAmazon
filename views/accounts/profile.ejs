<%- layout('layout') -%>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <img class="img-circle img-responsive img-center" src="<%= user.profile.picture %>" alt="">
      <br/>
      <p> Name : <%=user.profile.name %></p>
      <p> Email : <%=user.email %></p>
      <% if(user.profile.address==="" || typeof user.profile.address==="undefined") {%>
        <p>
        Address:<span style="color:#c0392c, font-weight:bold">You have no address</span>
        </p>
      <% } else { %>
        <p> Address : <%=user.profile.address %></p>
      <% } %>
      <a href="/edit-profile" class="btn btn-primary btn-lg">Edit Profile</a>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">History</h2>
      <table class="table table-striped sticky-header">
        <thead>
          <tr>
            <th>
              Item's Name
            </th>
            <th>
              Paid
            </th>
          </tr>
          <tbody>
            <% user.history.forEach(function(history){ %>
              <tr>
                <td>
                  <%= history.item.name %>
                </td>
                <td>
                  <%= history.paid %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>
