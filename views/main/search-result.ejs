<%- layout('layout') -%>
  <div class="container">
    <% if(data.length===0) { %>
      <h3>Search not found</h3>
      <% } else { %>
        <h3>Results for '<%= query %>':</h3>
        <div class="row">
          <% data.forEach(function(product){ %>
            <div class="col-md-4">
              <a href="/product/<%= product._id %>">
                <div class="thumbnail">
                  <img src="<%= product.image %>">
                  <div class="caption">
                    <h3><%= product.name %></h3>
                    <p>
                      <%= product.category.name %>
                    </p>
                    <p>
                      $<%= product.price %>
                    </p>
                  </div>
                </div>
              </a>
            </div>
            <% }); %>
        </div>
  </div>
  <% } %>
